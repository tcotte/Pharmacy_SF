{% extends "default/index.html.twig" %}
{% block content %}
    <center>
        <h3>
            Suivi de mes commandes
        </h3>
        <br>
        <div class="col-md-6">
            {% if listCommand is empty %}
            <p>Vous n'avez pas créé de commande récemment</p>
            {% endif %}
            {% for command in listCommand %}
                {% if command.treat == true %}
                <div class="card border-success" attr-id="{{ command.id }}">
                    <div class="card-header">
                        <div class="inline">
                            Commande n°{{command.id}}
                            -
                            {{command.user.username}}
                            <div href="#" class="btn btn-success">
                                <i class="far fa-calendar-check"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{command.category.name}}</h5>
                        {% for product in command.commandProducts %}

                            {% if product.quantity > 0 %}
                                <p class="card-text">
                                    <b>{{product.quantity}}</b>
                                    x
                                    <b>{{product.product.designation}}</b>
                                </p>
                            {% endif %}

                        {% endfor %}
                        <div class="row">
                            <a href="#" class="btn btn-primary">Voir le détail</a>


                        </div>
                    </div>
                    <div class="card-footer">
                        Demandée le
                        {{command.creationDate|date("d/m/Y")}} ---
                        Traitée le {{command.treatmentDate|date("d/m/Y")}}
                    </div>
                </div><br>

                {% elseif command.treat == false %}
                    <div class="card border-danger" attr-id="{{ command.id }}">
                        <div class="card-header">
                            <div class="inline">
                                Commande n°{{command.id}}
                                -
                                {{command.user.username}}
                                <div href="#" class="btn btn-danger">
                                    <i class="far fa-calendar-times"></i>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{command.category.name}}</h5>
                            {% for product in command.commandProducts %}
                                {% if product.quantity > 0 %}
                                    <p class="card-text">
                                        <b>{{product.quantity}}</b>
                                        x
                                        <b>{{product.product.designation}}</b>
                                    </p>
                                {% endif %}
                            {% endfor %}
                            <div class="row">
                                <a href="#" class="btn btn-primary">Voir le détail</a>


                            </div>
                        </div>
                        <div class="card-footer">
                            Demandée le
                            {{command.creationDate|date("d/m/Y")}}
                        </div>
                    </div><br>

                {% endif %}
            {% endfor %}
        </div>
    </center>
    <style>
        .btn-success {
            position: absolute;
            right: 0.4rem;
            top: 0.4rem;
        }
        .btn-danger {
            position: absolute;
            right: 0.4rem;
            top: 0.4rem;
        }

        .btn-primary {
            margin-left: 40px;
        }
        h3 {
            margin-top: 20px;
        }

    </style>
{% endblock %}
{% block javascripts %}

{% endblock %}